             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             BackgroundColor="Purple"
             x:Class="AppLoginXamarin.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand"
                 BackgroundColor="White"
                 Margin="10"
